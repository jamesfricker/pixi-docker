# escape=`

ARG BASE_IMAGE
FROM ${BASE_IMAGE}

ARG PIXI_VERSION

# Create a directory for Pixi
RUN mkdir C:\Pixi

# Download Pixi
ADD https://github.com/prefix-dev/pixi/releases/download/v${PIXI_VERSION}/pixi-x86_64-pc-windows-msvc.exe C:\Pixi\pixi.exe

# Add Pixi to PATH
RUN setx /M PATH "%PATH%;C:\Pixi"

# Verify Pixi installation
RUN pixi --version

WORKDIR C:\

ENTRYPOINT ["pixi"]
